- form_for @subscriber_list do |f|
  = f.error_messages
  = f.hidden_field :user_id, :value => @subscriber_list.user_id || current_user.id
  .remote
    .section
      %table(width="500" cellpadding="0" cellspacing="0")
        %tr
          %td(valign="top")
            .label.top.req= "Nombre:"
            = f.text_field :name
        %tr
          %td(valign="top")
            .label.top.req= "DescripciÃ³n:"
            = f.text_area :description, :rows => 5
        - if @subscriber_list.new_record?
          %tr
            %td(valign="top")
              .label.top.req= "Copiar contactos de la lista:"
              = f.collection_select :clone_list_id, current_space.subscriber_lists, :id, :name, {:selected => params[:clone].to_i, :include_blank => true}


  .buttonbar
    = f.submit "Guardar cambios", :class => 'btn'