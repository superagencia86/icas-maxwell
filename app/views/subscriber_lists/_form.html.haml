.section
  %table(width="500" cellpadding="0" cellspacing="0")
    %tr
      %td(valign="top")
        .label.top.req= "Nombre"
        = f.text_field :name, :style => "width:224px"

  %table{ :width => 800, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :colspan => 3 }
        %table{ :width => "100%", :cellpadding => 0, :cellspacing => 0 }
          %tr
            %td{ :valign => :top }
              .label RelaciÃ³n
              - for relationship in Relationship.find(:all)
                %div
                  = check_box_tag "subscriber_list[relationship_ids][]", relationship.id, !@subscriber_list.new_record? && @subscriber_list.relationships.include?(relationship)
                  = relationship.name

            %td= spacer
            %td{ :valign => :top }
              .label Tipo de empresa
              - for company_type in CompanyType.find(:all)
                %div
                  = check_box_tag "subscriber_list[company_type_ids][]", company_type.id, !@subscriber_list.new_record? && @subscriber_list.company_types.include?(company_type)
                  = company_type.name
  
          %tr
            %td{ :valign => :top }
              .label Sector
          %tr
            - Sector.find(:all).in_groups_of(12, false) do |sectors|
              %td{ :valign => :top }
                - sectors.each do |sector|
                  %div
                    = check_box_tag "subscriber_list[sector_ids][]", sector.id, !@subscriber_list.new_record? && @subscriber_list.sectors.include?(sector)
                    = sector.name
              %td= spacer
