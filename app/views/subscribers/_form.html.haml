.remote
  .section
    %table(width="500" cellpadding="0" cellspacing="0")
      %tr
        %td{ :valign => :top }
          .label.top.req Email
          = f.text_field :email, :style => "width:224px"
      %tr
        %td(valign="top")
          .label.top= "Nombre"
          = f.text_field :name, :style => "width:224px"
        %td= spacer
        %td(valign="top")
          .label.top= "Primer apellido"
          = f.text_field :first_surname, :style => "width:224px"
        %td= spacer
        %td(valign="top")
          .label.top= "Segundo apellido"
          = f.text_field :second_surname, :style => "width:224px"
      
